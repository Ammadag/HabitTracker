<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CE8C96FF"
    tools:context=".fragments.WelcomeFragment">

    <ImageView
        android:id="@+id/lgo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/splashicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wc_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Hi! Welcome To Main Habbit"
        android:textAlignment="center"
        android:textColor="#FFECCC"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="@id/lgo"
        app:layout_constraintStart_toStartOf="@id/lgo"
        app:layout_constraintTop_toBottomOf="@id/lgo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Explore the app, Find some peace of mind to achive good habits."
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/wc_txt"
        app:layout_constraintStart_toStartOf="@id/wc_txt"
        app:layout_constraintTop_toBottomOf="@id/wc_txt" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wc_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wc_mainimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="@color/md_theme_dark_onError"
        android:text="GET STARTED"
        android:textColor="#494747"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="35dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>