<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SubscriptionFragment"
    android:background="@drawable/gradiiant">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#009DA4C6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/sub_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/subscription"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crd_sub"
        android:layout_width="340dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sub_txt">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_subb"
            android:layout_marginStart="170dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60% OFF On Upgrade"
            android:textStyle="bold"
            android:textColor="#9C423B3B"
            android:layout_margin="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expires in"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="CountDown Timer"
            android:textSize="28sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"/>
        


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/crd_unlock"
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/crd_sub"
        app:layout_constraintEnd_toEndOf="@id/crd_sub"
        app:layout_constraintTop_toBottomOf="@id/crd_sub">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock Monumental Habits"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#A6000000"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ls1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ls1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ls1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="140dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlmited Habits"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginStart="60dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access All Courses"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginStart="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access to All avatar illustrations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="140dp"
            android:layout_marginStart="60dp"/>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sub_price1"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/crd_unlock"
        app:layout_constraintTop_toBottomOf="@id/crd_unlock">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$19"
            android:textStyle="bold"
            android:textColor="#9C6273DD"
            android:textSize="28sp"
            android:layout_margin="20dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6-Month Plan For 39.99"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#90473939"
            android:layout_marginTop="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sub_price2"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/sub_price1"
        app:layout_constraintTop_toBottomOf="@id/crd_unlock">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$29"
            android:textStyle="bold"
            android:textColor="#9C6273DD"
            android:textSize="28sp"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-Month Plan For 199.99"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#90473939"
            android:layout_marginTop="55dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yearly"
            android:textStyle="bold"
            android:layout_marginStart="35dp"
            android:layout_marginTop="100dp"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sub_price3"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/sub_price2"
        app:layout_constraintTop_toBottomOf="@id/crd_unlock">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$399"
            android:textStyle="bold"
            android:textColor="#9C6273DD"
            android:textSize="28sp"
            android:layout_margin="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="life Time Plan"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#90473939"
            android:layout_marginTop="65dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life Time"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"/>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>